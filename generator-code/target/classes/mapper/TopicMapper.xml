<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grouping.mapper.TopicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.grouping.entity.Topic">
        <id column="id" property="id" />
        <result column="topic_name" property="topicName" />
        <result column="dsc" property="dsc" />
        <result column="grouping_id" property="groupingId" />
        <result column="user_id" property="userId" />
        <result column="create_time" property="createTime" />
        <result column="glance" property="glance" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, topic_name, dsc, grouping_id, user_id, create_time, glance
    </sql>

</mapper>
